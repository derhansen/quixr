#!/usr/bin/env php
<?php

set_time_limit(0);

(@include_once __DIR__ . '/../vendor/autoload.php') || @include_once __DIR__ . '/../../../autoload.php';

use Symfony\Component\Console\Application;
use Derhansen\Quixr\Helper\LogfileHelper;
use Derhansen\Quixr\Helper\FilesystemHelper;

$app = new Application('Quixr', '0.0.0');
$app->getHelperSet()->set(new LogfileHelper());
$app->getHelperSet()->set(new FilesystemHelper());
$app->addCommands(array(
	new Derhansen\Quixr\Commands\AnalyzeCommand()
));
$app->run();